<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Main.Main_Fragment"
    android:orientation="vertical"
    android:background="@drawable/cancer_background"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="350sp"
                android:layout_height="200sp"
                android:layout_marginLeft="16sp"
                android:layout_marginTop="15sp">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewpager11"
                    android:layout_width="350sp"
                    android:layout_height="200sp"
                    android:layout_centerInParent="true"></androidx.viewpager.widget.ViewPager>


            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16sp"
                android:layout_marginTop="16sp"
                android:fontFamily="@font/jua"
                android:text="코로나 확진자수"
                android:textColor="#000000"
                android:id="@+id/korona_text"
                android:textSize="24sp"></TextView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16sp"
                android:layout_marginTop="16sp"
                android:layout_marginLeft="16sp"
                android:layout_marginRight="16sp">

                <androidx.appcompat.widget.SearchView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                </androidx.appcompat.widget.SearchView>


            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16sp"
                android:layout_marginTop="16sp"
                android:fontFamily="@font/jua"
                android:text="건강에 좋은 식습관"
                android:textColor="#000000"
                android:textSize="24sp"></TextView>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="270sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/Nutrient_gogo"
                        android:layout_width="175sp"
                        android:layout_height="250sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="105sp"
                        android:backgroundTint="#ACE1AE"
                        android:elevation="16sp"
                        app:cardCornerRadius="16sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="250sp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/cancer_image1"
                                android:layout_width="80sp"
                                android:layout_height="80sp"
                                android:layout_margin="28sp"
                                android:src="@drawable/nutrient_image"></ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20sp"
                                android:fontFamily="@font/jua"
                                android:text="암에좋은 \n\n영양제"
                                android:textColor="#000000"
                                android:textSize="25sp"
                                android:textStyle="bold"></TextView>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/Select_gogo2"
                        android:layout_width="175sp"
                        android:layout_height="250sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="105sp"
                        android:backgroundTint="#E4C5C3"
                        android:elevation="16sp"
                        app:cardCornerRadius="16sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="250sp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/cancer_image2"
                                android:layout_width="80sp"
                                android:layout_height="80sp"
                                android:layout_margin="28sp"
                                android:src="@drawable/vegitable_image"></ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20sp"
                                android:fontFamily="@font/jua"
                                android:text="암에좋은 \n\n음식"
                                android:textColor="#000000"
                                android:textSize="25sp"
                                android:textStyle="bold"></TextView>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/Select_gogo3"
                        android:layout_width="175sp"
                        android:layout_height="250sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="105sp"
                        android:backgroundTint="#673AB7"
                        android:elevation="16sp"
                        app:cardCornerRadius="16sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="250sp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/cancer_image3"
                                android:layout_width="80sp"
                                android:layout_height="80sp"
                                android:layout_margin="28sp"
                                android:src="@drawable/unnutrient_image"></ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20sp"
                                android:fontFamily="@font/jua"
                                android:text="암에안좋은 \n\n음식"
                                android:textColor="#000000"
                                android:textSize="25sp"
                                android:textStyle="bold"></TextView>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>


            </HorizontalScrollView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16sp"
                android:layout_marginTop="22sp"
                android:fontFamily="@font/jua"
                android:text="담배 끊기 프로젝트"
                android:textColor="#000000"
                android:textSize="24sp"></TextView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/gogo_room"
                        android:layout_width="match_parent"
                        android:layout_height="180sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="10sp"
                        android:layout_weight="1"
                        android:backgroundTint="#838583"
                        android:elevation="16sp"
                        app:cardCornerRadius="16sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="80sp"
                                android:layout_height="80sp"
                                android:layout_margin="28sp"
                                android:src="@drawable/cigarette"></ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20sp"
                                android:fontFamily="@font/jua"
                                android:text="금연기록"
                                android:textColor="#000000"
                                android:textSize="25sp"
                                android:textStyle="bold"></TextView>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/Select_cigarette_calendar"
                        android:layout_width="match_parent"
                        android:layout_height="180sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="5sp"
                        android:layout_weight="1"
                        android:backgroundTint="#3F51B5"
                        android:elevation="16sp"
                        app:cardCornerRadius="16sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="80sp"
                                android:layout_height="80sp"
                                android:layout_margin="28sp"
                                android:src="@drawable/calendar_image"></ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20sp"
                                android:fontFamily="@font/jua"
                                android:text="금연 캘린더"
                                android:textColor="#000000"
                                android:textSize="25sp"
                                android:textStyle="bold"></TextView>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/Select_cigarette_gan"
                        android:layout_width="match_parent"
                        android:layout_height="180sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="5sp"
                        android:layout_weight="1"
                        android:backgroundTint="#9C27B0"
                        android:elevation="16sp"
                        app:cardCornerRadius="16sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="80sp"
                                android:layout_height="80sp"
                                android:layout_margin="28sp"
                                android:src="@drawable/gan"></ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20sp"
                                android:fontFamily="@font/jua"
                                android:text="폐건강 변화"
                                android:textColor="#000000"
                                android:textSize="25sp"
                                android:textStyle="bold"></TextView>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </HorizontalScrollView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16sp"
                android:layout_marginTop="16sp"
                android:fontFamily="@font/jua"
                android:text="암 관련"
                android:textColor="#000000"
                android:textSize="24sp"></TextView>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/gogo_retrofit"
                        android:layout_width="330sp"
                        android:layout_height="180sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="10sp"
                        android:layout_weight="1"
                        android:backgroundTint="#838583"
                        android:elevation="16sp"
                        app:cardCornerRadius="16sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/statics_image"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20sp"
                                android:layout_marginTop="20sp"
                                android:fontFamily="@font/jua"
                                android:text="암 통계"
                                android:textColor="#9C27B0"
                                android:textSize="25sp"
                                android:textStyle="bold"></TextView>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/gogo_retrofit2"
                        android:layout_width="330sp"
                        android:layout_height="180sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="5sp"
                        android:layout_weight="1"
                        android:backgroundTint="#838583"
                        android:elevation="16sp"
                        app:cardCornerRadius="16sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/health_image"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20sp"
                                android:layout_marginTop="20sp"
                                android:fontFamily="@font/jua"
                                android:text="암 예방 수칙"
                                android:textColor="#9C27B0"
                                android:textSize="25sp"
                                android:textStyle="bold"></TextView>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16sp"
                android:layout_marginTop="16sp"
                android:fontFamily="@font/jua"
                android:text="공지사항"
                android:textColor="#000000"
                android:textSize="24sp"></TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/notice_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80sp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cancer_banner"></ImageView>

            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</RelativeLayout>